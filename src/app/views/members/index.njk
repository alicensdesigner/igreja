{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">

        <div class="header">
            <a class="button" href="/members/create">Novo</a>

            <!--para filtrar por um nome e etc e o filtro ficar na tela value= {filter} -->
            <form action="/members" method="GET">
                <input type="text" name="filter" value="{{filter}}" placeholder="Nome ou email">
                <button type="submit">Filtrar</button>

            </form>
        
        </div>
        
        <table width = "100%">
            <thead>
                <th>Membro</th>
                <th>Email</th>
                <th>Peso</th>
                <th>Altura</th>
                <th>Ação</th>
            </thead>
            <tbody>
            {% for member in members %}
                <tr>
                    <td>
                    <span style =
                    "background-image: url({{member.avatar_url}})">
                    </span>
                    {{member.name}}</td>
                    <td>{{member.email}}</td>
                    <td>{{member.weight}}Kg</td>
                    <td>{{member.height}}Cm</td>
                    <td><a href="/members/{{member.id}}">Ver</a> </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
   
        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter = {{filter}}
        ></div>
    </div>
{% endblock content %}